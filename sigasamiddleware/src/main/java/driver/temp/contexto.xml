<contexto_driver>
    <pacote>tomadas</pacote> <!-- nome do pacote driver.? -->
    <nome>EFICIENCIA ENERGETICA</nome>  <!-- nome do driver -->
    <descricao>Coleta de dados e atuação das tomadas Phantom V2.0</descricao>
    <fabricante>Diovane Soligo</fabricante>
    <versao>1.0</versao>
    
    <r_d>false</r_d>                     <!-- reconhece automaticamente dispositivos na rede? -->
    <n_c_d_a>true</n_c_d_a>              <!-- necessita cadastrar dispositivos atraves de uma aplicação? só se r_d for nao-->
    <busca_dados>true</busca_dados>      <!-- busca dados de dispositivos? -->
    <atua_disp>true</atua_disp>          <!-- possui ação sobre os dispositivo? -->
    <teste>true</teste>                  <!-- após instalar, é possivel testar sem uma aplicação? caso NAO o teste vem da aplicação-->
    
    <sensores_coleta>                   <!-- tipos de dados/sensores coletados (se busca_dados for SIM) -->
        <sensor>AMPERES</sensor>
        <sensor>VOLTS</sensor>
        <sensor>TEMPERATURA</sensor>
        <sensor>UMIDADE</sensor>
    </sensores_coleta>
    
    <atua>                              <!-- tipo de atuacao (se atua_disp for SIM)-->
        <atuador>RELE</atuador>
    </atua>
    
    <run>false</run>                      <!-- carregar classes no classLoader ao instalar? -->
</contexto_driver>
